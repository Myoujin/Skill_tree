// Prisma schema for Data Science Skill Tree

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  password   String
  userSkills UserSkill[]
}

model Skill {
  id          String  @id
  title       String
  description String
  image       String

  prerequisites SkillRelation[] @relation("PrereqOnSkill")
  unlocks       SkillRelation[] @relation("UnlocksFromSkill")

  userSkills    UserSkill[]
}

model SkillRelation {
  fromId String
  toId   String

  from   Skill @relation("PrereqOnSkill",  fields: [fromId], references: [id])
  to     Skill @relation("UnlocksFromSkill", fields: [toId],  references: [id])

  @@id([fromId, toId])
}

model Role {
  id               String   @id
  title            String
  description      String
  requiredSkillIds String[]
}

model Course {
  id          String   @id
  title       String
  description String
  skillIds    String[]
}

model UserSkill {
  user   User  @relation(fields: [userId], references: [id])
  userId Int
  skill  Skill @relation(fields: [skillId], references: [id])
  skillId String

  @@id([userId, skillId])
}
